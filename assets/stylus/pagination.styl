.pagination
  float right
  margin-right 15px
  margin-top 30px
  margin-bottom 20px
  font-size $font+6
  font-style italic

.pagination__current-page
  color #999999

.pagination__page-link
  color $main-link-color
  text-decoration none

.pagination__more-pages
  color #999999

.pagination__next-button
  margin 28px
  margin 0px
  padding 3.5px 6.5px
  font-style normal
  color $main-link-color
  border 1px solid #d0d0d0

.pagination__last-button
  margin 28px
  margin 0px
  padding 3.5px 6.5px
  font-style normal
  color $main-link-color
  border 1px solid #d0d0d0